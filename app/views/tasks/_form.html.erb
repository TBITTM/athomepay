<% if @task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: task) do |f| %>

  <%= f.label :content, 'お手伝い項目' %>
  <%= f.text_field :content %>

  <%= f.label :price, 'いくら？' %>
  <%= f.text_field :price %>

  <%= f.submit '投稿' %>
<% end %>
